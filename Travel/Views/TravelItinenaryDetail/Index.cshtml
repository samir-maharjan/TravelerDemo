@model IEnumerable<Travel.Models.TravelItinenaryDetail>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center;">Travel Itinenary Detail</h1>
<hr />

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="Datatbl">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Task)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstimatedBudget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelPhoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empolyee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedBudget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToDate)
            </td>
            <td>
                <img src="@item.HotelPhoto" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empolyee.EmpName)
            </td>
            <td>
                <a class="btn btn-primary-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-secondary-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-danger-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
